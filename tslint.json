{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "quotemark": false,
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": {
                    "objects": "ignore",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "object-literal-sort-keys": false,
        "semicolon": true
    },
    "rulesDirectory": []
}
